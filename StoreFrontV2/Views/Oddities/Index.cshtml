@model IEnumerable<StoreFrontEFSecured.DATA.EF.Oddity>

@{
    ViewBag.Title = "Oddities for Sale";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="/Oddities/Create" class="btn btn-warning">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Name of Oddity
        </th>
        <th>
            Date of Recovery
        </th>
        <th>
            Genre
        </th>
        <th>
            Origin
        </th>
        <th>
            Status of Oddity
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OddityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecoveryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Genre1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origin.Origin1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OddityStatu.Status)
        </td>
        <td>
            @string.Format($"{item.Price:c}")
        </td>
        <td>
            <a href="@Url.Action("Edit", "Oddities", new { id=item.OddityID })">
                <i class="fa fa-pencil-square-o action-icons" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Details", "Oddities", new { id = item.OddityID })">
                <i class="fa fa-info-circle action-icons" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Delete", "Oddities", new { id = item.OddityID })">
                <i class="fa fa-trash-o action-icons" aria-hidden="true"></i>
            </a>
        </td>
    </tr>
}

</table>
